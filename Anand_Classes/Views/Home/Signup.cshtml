<script>
    // Input element ko select kare
    var imageInput = document.getElementById('imageInput');

    // Image element ko select kare
    var displayImage = document.getElementById('displayImage');

    // Input element me kuch badlav hota hai to is event listener se uska response lo
    imageInput.addEventListener('change', function () {
        // Input me se chuni gayi file ko select karo
        var selectedImage = imageInput.files[0];

        // Selected image ka URL nikalo
        var imageURL = URL.createObjectURL(selectedImage);

        // Image element ki src property ko set karo
        displayImage.src = imageURL;
    });






    function getCaptcha() {
